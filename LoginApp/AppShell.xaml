<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoginApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LoginApp"
    xmlns:views="clr-namespace:LoginApp.Views"
    xmlns:models="clr-namespace:LoginApp.Models"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="250"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="Recetas">
    

    <!-- Footer para cerrar sesión -->
    <Shell.FlyoutFooter>
        <Button 
            x:Name="OnLogout"
            FontFamily="Sinera"
            Text="Cerrar Sesión"
            CornerRadius="0"
            BackgroundColor="OliveDrab"
            Clicked="OnLogout_Clicked"/>
    </Shell.FlyoutFooter>

</Shell>